    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES6",
        "module": "ES6",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true
